class UnlPublicStreamWrapper extends DrupalPublicStreamWrapper {
  function getExternalUrl() {
    $url = $GLOBALS['base_url'];

    if (!variable_get('unl_clean_file_url')) {
      $url .= '/' . self::getDirectoryPath();
